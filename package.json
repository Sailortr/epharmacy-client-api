{
  "name": "e-pharmacy-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "e-Pharmacy backend (Express + Mongoose).",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:index": "node src/scripts/ensure-indexes.js",
    "seed": "node src/scripts/seed.js",
    "wipe": "node src/scripts/wipe.js",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test node --test test/**/*.test.js --test-concurrency=1 --test-reporter=spec --test-timeout=120000",
    "test:cov": "c8 -r text -r lcov npm run test",
    "test:ci": "c8 --check-coverage --branches 80 --lines 85 --functions 85 npm run test"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.0",
    "pino": "^9.11.0",
    "pino-http": "^10.5.0",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
